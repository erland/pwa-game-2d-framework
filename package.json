{
  "name": "pwa-game-2d-framework-monorepo",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "build": "pnpm -r --filter ./packages/framework run build",
    "publish:framework": "pnpm -r --filter ./packages/framework run publish:gh",
    "clean": "pnpm -r exec rimraf dist coverage .vite .turbo '*.tsbuildinfo' && rimraf node_modules .pnpm-store '**/.DS_Store'",
    "clean:deep": "pnpm run clean && rimraf pnpm-lock.yaml",
    "clean:templates": "pnpm -r --filter './packages/templates/*' exec rimraf node_modules dist .vite .turbo"
  },
  "pnpm": {
    "overrides": {
      "@erland/pwa-game-2d-framework": "link:packages/framework",
      "@SCOPE/pwa-game-2d-framework": "link:packages/framework"
    }
  },
  "devDependencies": {
    "rimraf": "^6.1.0"
  }
}
