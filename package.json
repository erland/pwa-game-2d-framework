{
  "name": "pwa-game-2d-framework-monorepo",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "build": "pnpm -r --filter ./packages/framework run build",
    "publish:framework": "pnpm -r --filter ./packages/framework run publish:gh",
    "clean:packages": "rimraf -g \"packages/**/node_modules\" \"packages/**/dist\" \"packages/**/coverage\" \"packages/**/.vite\" \"packages/**/.turbo\" \"packages/**/**/*.tsbuildinfo\"",
    "clean": "pnpm -r exec rimraf node_modules dist coverage .vite .turbo \"**/*.tsbuildinfo\" && rimraf -g node_modules .pnpm-store \"digest*.*\" \"./digest*.*\"",
    "clean:all": "pnpm run clean:packages && pnpm run clean",
    "clean:deep": "pnpm run clean:all && rimraf pnpm-lock.yaml && pnpm store prune",
    "scaffold:local": "node scripts/scaffold-local.cjs"
  },
  "pnpm": {
    "overrides": {
      "@erland/pwa-game-2d-framework": "link:packages/framework",
      "@SCOPE/pwa-game-2d-framework": "link:packages/framework"
    }
  },
  "devDependencies": {
    "rimraf": "^6.1.0"
  }
}
