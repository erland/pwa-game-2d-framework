{
  "name": "@erland/pwa-game-2d-framework",
  "version": "0.1.0",
  "description": "Base TypeScript framework for 2D PWA games (Phaser, Vite).",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "dist",
    "docs"
  ],
  "sideEffects": false,
  "scripts": {
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "tsup src/index.ts --format esm,cjs --dts --clean --sourcemap",
    "prepublishOnly": "pnpm run build && pnpm run docs",
    "publish:gh": "npm publish",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docs": "typedoc --options typedoc.json"
  },
  "peerDependencies": {
    "phaser": "^3.80.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "phaser": "^3.80.0",
    "tsup": "^8.1.0",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.6.4",
    "typescript": "^5.9.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erland/pwa-game-2d-framework.git",
    "directory": "packages/framework"
  },
  "author": "",
  "license": "BSD-3-Clause"
}