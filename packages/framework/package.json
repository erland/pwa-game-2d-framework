{
  "name": "@erland/pwa-game-2d-framework",
  "version": "0.1.0",
  "description": "Base TypeScript framework for 2D PWA games (Phaser, Vite).",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean --sourcemap",
    "prepublishOnly": "pnpm build",
    "publish:gh": "npm publish",
    "test": "vitest run"
  },
  "peerDependencies": {
    "phaser": "^3.80.0"
  },
  "devDependencies": {
    "phaser": "^3.80.0",
    "tsup": "^8.1.0",
    "typescript": "^5.6.2",
    "vitest": "^2.1.3"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erland/pwa-game-2d-framework.git",
    "directory": "packages/framework"
  },
  "author": "",
  "license": "MIT"
}
